<h3>Telerik Grid Submission with Parameters</h3>
<br />

<div class="demo-section k-content">
    <div class="row">
        <div class="col-md-3">
            <h2>Select Vendor</h2>
            <label for="required">Required</label>
            <select id="required" multiple="multiple" style="width:200px;" data-placeholder="Select vendor...">
                <option>RSA</option>
                <option>GWC</option>
                <option>ALL</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="campaign">Campaign</label>
            <select id="campaign" multiple="multiple" style="width:200px;" data-placeholder="Select campaign...">
                <option>APTSCO</option>
                <option>APTSCC</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="status">Status</label>
            <select id="status" multiple="multiple" style="width:200px;" data-placeholder="Select status...">
                <option>OPEN</option>
                <option>Cancelled</option>
            </select>
        </div>
        <div class="col-md-3">
            <button class="k-button" id="get">Submit</button>
        </div>
    </div>
    <br /><br /><br />
    <br />
    <div id="grid"></div>
    <script>

        (document).ready(function () {

            function onClick(e) {
                kendoConsole.log("event :: click (" + $(e.event.target).closest(".k-button").attr("id") + ")");
            }

            $("#get").kendoButton({
                click: onClick
            });
        });

    </script>

</div>
<style>
    .demo-section label {
        display: block;
        margin: 15px 0 5px 0;
    }

    #get {
        float: right;
        margin: 25px auto 0;
    }

    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>
<script>
    $(document).ready(function () {
        // create MultiSelect from select HTML element
        var required = $("#required").kendoMultiSelect().data("kendoMultiSelect");
        var optional = $("#campaign").kendoMultiSelect({
            autoClose: false
        }).data("kendoMultiSelect");
        var status = $("#status").kendoMultiSelect().data("kendoMultiSelect");
        $("#get").click(function () {
            //alert("Attendees:\n\nRequired: " + required.value() + "\nCampaign: " + optional.value() + "\nStatus: " + status.value());
            var parameters = "Required=" + required.value() + "&" + "Campaign=" + optional.value() + "&" + "Status=" + status.value();

            var serviceURL = "GetVendors";

            $("#grid").kendoGrid({
                //http://stackoverflow.com/questions/18925779/kendo-ui-specify-parameter-name-on-datasource-read
                dataSource: {
                    serverFiltering: true,
                    type: "odata",
                    transport: {
                        datatype: "json",
                        read: serviceURL,
                        parameterMap: function (data, type) {
                            if (type === "read") {
                                return { dataParm: parameters }
                            }
                        }
                    },
                    schema: {
                        type: "json",
                        data: function (raw) {
                            return raw.Data;
                        },
                        //http://www.telerik.com/forums/binding-to-json-only-containing-list-of-values-not-dictionary
                        model: {
                            fields: {
                                ContactName: { type: "string" },
                                ContactTitle: { type: "string" },
                                CompanyName: { type: "string" }
                            }
                        }
                    },
                    pageSize: 20
                },
                height: 550,
                groupable: false,
                sortable: false,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                },
                columns: [{
                    field: "ContactName",
                    title: "Contact Name",
                }, {
                    field: "ContactTitle",
                    title: "Contact Title"
                }, {
                    field: "CompanyName",
                    title: "Company Name"
                }]

            });


        //    $.ajax({
        //        url: serviceURL,
        //        type: "POST",
        //        dataType: "json",
        //        async: true,
        //        timeout: 25000,
        //        //data: [{ parameters: "Jane Doe" }],
        //            contentType: "application/json; charset=utf-8",

        //    success: function (data) {
        //        GridDataBind(data);
        //    }
        //});
    });

    function GridDataBind(gridData) {
        var element = $("#grid");

        element.kendoGrid({
            dataSource: {
                data: gridData.Data,
                pageSize: 10
            },
            schema: {
                model: {
                    fields: {
                        ContactName: { type: "string" },
                        ContactTitle: { type: "string" },
                        CompanyName: { type: "string" }
                    }
                }
            },
            groupable: false,
            sortable: false,
            pageable: {
                refresh: true,
                pageSizes: true,
            },
            height: 550,
            columns: [{
                field: "CompanyName",
                title: "Company Name",
                width: 140
            }, {
                field: "ContactTitle",
                title: "Contact Title",
                width: 190
            }, {
                field: "CompanyName",
                title: "Company Name"
            }]
        });
    }
    });
</script>*@